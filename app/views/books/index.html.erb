<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
  <tbody>
    <%= form_with model:@book, local:true do |f| %>
  <tr>
    <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  </tr>
  <tr>
	  <th>name</th>
	  <th><%= current_user.name%></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= current_user.introduction%></th>
  </tr>
</tbody>
</table>

<div class="row">
  <%= link_to '',  edit_user_path(current_user.id), class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>
</div>
 <h2 class="mt-3">New book</h2>
  <div class="form-group">
    <label>title</label></br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label>Opinion</label></br>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
   <%= f.submit 'Create Book', :class=>'btn btn-success' %>
  </div>

  <% end %>

      </div>
      <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag('no_image.jpg') %></td>
        <td><%= link_to "", user_path(current_user) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
  </tbody>
</table>
    </div>
  </div>
  </div>
</main>

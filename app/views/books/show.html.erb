<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
      <%= render 'books/book', book:@newbook, user:@user %>
      </div>

      <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
  		  <tbody>
  		    <tr>
          <td><%= link_to user_path(@book.user) do %>
          <%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %></br>
          <%= @book.user.name %>
          <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path, class: 'btn btn-sm btn-success' %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class:'btn btn-sm btn-danger', "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
        </tr>
      </tbody>

</table>
    </div>
  </div>
  </div>
</main>
